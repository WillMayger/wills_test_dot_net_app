<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")" type="text/javascript"></script>

</head>

<body>
    <div class="page">

        <div id="header">
            <div id="title">
                <h1>@ViewBag.Title</h1>
            </div>

             <div id="logodisplay">
             <img src="../../Content/Images/QAGamesSmallest.jpg" alt="QA games shop logo" />
             </div>

            <div id="menucontainer">

                <ul id="menu">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Games", "Index", "Game")</li>
                    <li>@Html.ActionLink("Basket", "Index", "Basket")</li>
                    <li>@Html.ActionLink("Checkout", "Index", "Checkout")</li>
                </ul>

            </div>
        </div>

        <div id="main">
            @RenderBody()
            <div id="footer">
            Copyright QA
            </div>
        </div>
    </div>
</body>
</html>
